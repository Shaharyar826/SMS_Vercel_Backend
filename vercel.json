{
  "version": 2,
  "builds": [
    {
      "src": "./server.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": [
          "server.js",
          "config/**",
          "controllers/**",
          "middleware/**",
          "models/**",
          "routes/**",
          "utils/**",
          "public/**",
          "templates/**",
          "package.json"
        ]
      }
    }
  ],
  "routes": [
    { "src": "/api/health", "dest": "app.js" },
    { "src": "/(.*)", "dest": "app.js" }
  ]
}

